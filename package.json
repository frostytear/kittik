{
  "name": "@kittikjs/kittik",
  "version": "0.0.0-semantic-release",
  "description": "Keynote in Terminal (KiT) allows to you create and show ASCII presentations in terminal",
  "author": "ghaiklor",
  "bin": {
    "kittik": "./lib/bin/kittik.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kittikjs/kittik.git"
  },
  "license": "MIT",
  "scripts": {
    "compile": "babel src --presets es2015 --out-dir lib",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "dev": "babel src --presets es2015 --watch --out-dir lib",
    "docs": "esdoc -c .esdoc",
    "prepublish": "npm run compile",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "babel-node --presets es2015 ./node_modules/.bin/isparta cover _mocha"
  },
  "dependencies": {
    "charm": "1.0.0",
    "commander": "2.9.0",
    "keypress": "0.2.1"
  },
  "devDependencies": {
    "babel-cli": "6.1.2",
    "babel-preset-es2015": "6.1.2",
    "chai": "3.4.1",
    "coveralls": "2.11.4",
    "cz-conventional-changelog": "1.1.4",
    "esdoc": "0.4.3",
    "isparta": "3.5.3",
    "mocha": "2.3.3",
    "semantic-release": "4.3.5",
    "sinon": "1.17.2"
  },
  "bugs": {
    "url": "https://github.com/kittikjs/kittik/issues"
  },
  "homepage": "https://github.com/kittikjs/kittik#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "tag": "next"
  },
  "release": {
    "branch": "master"
  }
}
